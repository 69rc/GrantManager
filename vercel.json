{
  "version": 2,
  "name": "grant-manager",
  "builds": [
    {
      "src": "server/vercel-api.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "shared/**", "uploads/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/vercel-api.ts"
    },
    {
      "src": "/(.*)",
      "dest": "server/vercel-api.ts"
    }
  ],
  "functions": {
    "server/vercel-api.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "DATABASE_URL": "$DATABASE_URL",
    "JWT_SECRET": "$JWT_SECRET"
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}